{
  "manifest_version": 3,
  "name": "Gemini Translator",
  "version": "1.0",
  "description": "Dịch văn bản bôi đen",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage"
  ],
  "options_page": "manager.html",
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [
        "styles.js",           
        "ui-renderer.js",      
        "history-manager.js",  
        "content.js"           
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mở Gemini Japanese"
  },
  "commands": {
    "cmd_translate": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+Y"
      },
      "description": "1. Dịch nhanh (Gemini Flash Lite)"
    },
    "cmd_analyze": {
      "suggested_key": {
        "default": "Ctrl+G",
        "mac": "Command+Shift+U"
      },
      "description": "2. Phân tích ngữ pháp (Gemini Flash 2.5)"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "3. Mở Menu/Sổ tay (Click Icon)"
    },
    "cmd_reload_extension": {
    "suggested_key": {
      "default": "Alt+R",
      "mac": "Alt+R"
    },
      "description": " Reload Extension & Webpage"
    }
  }
}